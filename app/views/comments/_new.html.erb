<%= form_with(model: @article.comments.new, url: article_comments_path(@article), local: true) do |form| %>
  <div class="form-group">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit 'Add', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
